echo $_SESSION['payment_succesful'];


function.php
add_action( 'woocommerce_before_thankyou', 'success_message_after_payment' );
function success_message_after_payment( $order_id ){
    // Get the WC_Order Object
    $order = wc_get_order( $order_id );

    if ( $order->has_status('processing') ){
        wc_print_notice( __("
		Merci for Placing an on Der at Le Loft Devparis.", "woocommerce"), "success" );
		$_SESSION['payment_succesful'] =  '<div class="myaccount-message" role="alert">
		Merci for Placing an on Der at Le Loft Devparis.</div>';

    }
	else {
		
		unset($_SESSION['payment_succesful']);
	}
}
